{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "regionId": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "resourceNamePrefix": {
            "type": "string",
            "defaultValue": "[uniqueString(subscription().subscriptionId, resourceGroup().name)]"
        }
    },
    "variables": {
        "ingestionStorageAccountNamePrefix": "[concat(parameters('resourceNamePrefix'), 'ingst')]",
        "ingestionCdnProfileNamePrefix": "[concat(parameters('resourceNamePrefix'), 'ingcdnprofile')]",
        "ingestionCdnEndpointNamePrefix": "[concat(parameters('resourceNamePrefix'), 'ingcdn')]",
        "appServicePlanNamePrefix": "[concat(parameters('resourceNamePrefix'), 'asp')]",
        "functionStorageAccountNamePrefix": "[concat(parameters('resourceNamePrefix'), 'fnst')]",
        "functionAppNamePrefix": "[concat(parameters('resourceNamePrefix'), 'fn')]",
        "mediaEncodingStorageAccountNamePrefix": "[concat(parameters('resourceNamePrefix'), 'amsst')]",
        "mediaServicesNamePrefix": "[concat(parameters('resourceNamePrefix'), 'ams')]"
    },
    "resources": [
        {
            "name": "[variables('ingestionStorageAccountNamePrefix')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2016-01-01",
            "location": "[parameters('regionId')]",
            "kind": "Storage",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "name": "[variables('functionStorageAccountNamePrefix')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2016-01-01",
            "location": "[parameters('regionId')]",
            "kind": "Storage",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "name": "[variables('mediaEncodingStorageAccountNamePrefix')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2016-01-01",
            "location": "[parameters('regionId')]",
            "kind": "Storage",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "name": "[variables('ingestionCdnProfileNamePrefix')]",
            "type": "Microsoft.Cdn/profiles",
            "apiVersion": "2016-04-02",
            "location": "[parameters('regionId')]",
            "sku": {
                "name": "Standard_Akamai"
            }
        },
        {
            "name": "[variables('mediaServicesNamePrefix')]",
            "type": "Microsoft.Media/mediaServices",
            "apiVersion": "2015-10-01",
            "location": "[parameters('regionId')]",
            "properties": {
                "storageAccounts": [
                    {
                        "id": "[resourceId('Microsoft.Storage/storageAccounts', variables('mediaEncodingStorageAccountNamePrefix'))]",
                        "isPrimary": true
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('mediaEncodingStorageAccountNamePrefix'))]"
            ]
        },
        {
            "name": "[concat(variables('ingestionCdnProfileNamePrefix'), '/', variables('ingestionCdnProfileNamePrefix'))]",
            "type": "Microsoft.Cdn/profiles/endpoints",
            "apiVersion": "2019-04-15",
            "location": "[parameters('regionId')]",
            "properties": {
                "originHostHeader": "[reference(variables('ingestionStorageAccountNamePrefix')).primaryEndpoints.blob]",
                "isHttpAllowed": false,
                "isHttpsAllowed": true,
                "origins": [
                    {
                        "name": "ingestionBlobStorageEndpoint",
                        "properties": {
                            "hostName": "[reference(variables('ingestionStorageAccountNamePrefix')).primaryEndpoints.blob]"
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Cdn/profiles', variables('ingestionCdnProfileNamePrefix'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('ingestionStorageAccountNamePrefix'))]"
            ]
        }
    ]
}
