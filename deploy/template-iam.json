{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "amsInstances": {
            "type": "array"
        },
        "functionAppIdentityPrincipalId": {
            "type": "string"
        },
        "resourceNamePrefix": {
            "type": "string",
            "defaultValue": "[uniqueString(subscription().subscriptionId, resourceGroup().name)]"
        }
    },
    "variables": {
        "contributorRoleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]"
    },
    "resources": [
        {
            "type": "Microsoft.Media/mediaServices/providers/roleAssignments",
            "apiVersion": "2018-09-01-preview",
            "name": "[concat(concat(parameters('resourceNamePrefix'), parameters('amsInstances')[copyIndex('amsInstancesCopy')].instanceId), '/Microsoft.Authorization/', guid(subscription().subscriptionId, resourceGroup().id, parameters('amsInstances')[copyIndex('amsInstancesCopy')].instanceId))]",
            "copy": {
                "name": "amsInstancesCopy",
                "count": "[length(parameters('amsInstances'))]"
            },
            "properties": {
                "roleDefinitionId": "[variables('contributorRoleDefinitionId')]",
                "principalId": "[parameters('functionAppIdentityPrincipalId')]"
            }
        }
    ]
}
