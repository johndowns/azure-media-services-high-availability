{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "instances": {
            "type": "array"
        },
        "resourceNamePrefix": {
            "type": "string",
            "defaultValue": "[uniqueString(subscription().subscriptionId, resourceGroup().name)]"
        }
    },
    "variables": {
        "mediaServicesCopyName": "MediaServicesCopy",
        "storageAccountCopyName": "StorageAccountCopy"
    },
    "resources": [
        {
            "type": "Microsoft.Media/mediaServices",
            "apiVersion": "2018-07-01",
            "name": "[concat(parameters('resourceNamePrefix'), parameters('instances')[copyIndex()].name)]",
            "location": "[parameters('instances')[copyIndex()].location]",
            "copy": {
                "name": "[variables('mediaServicesCopyName')]",
                "count": "[length(parameters('instances'))]"
            },
            "dependsOn": [
                "[variables('storageAccountCopyName')]"
            ],
            "properties": {
                "storageAccounts": [
                    {
                        "id": "[resourceId('Microsoft.Storage/storageAccounts', concat(parameters('resourceNamePrefix'), parameters('instances')[copyIndex()].name))]",
                        "type": "Primary"
                    }
                ]   
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-04-01",
            "name": "[concat(parameters('resourceNamePrefix'), parameters('instances')[copyIndex()].name)]",
            "location": "[parameters('instances')[copyIndex()].location]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "Storage",
            "copy": {
                "name": "[variables('storageAccountCopyName')]",
                "count": "[length(parameters('instances'))]"
            }
        }
    ],
    "outputs": {
        "createdInstances": {
            "type": "array",
            "copy": {
              "count": "[length(parameters('instances'))]",
              "input": {
                  "name": "[parameters('instances')[copyIndex()].name]",
                  "location": "[parameters('instances')[copyIndex()].location]",
                  "resourceGroupName": "[resourceGroup().name]",
                  "azureSubscriptionId": "[subscription().subscriptionId]",
                  "instanceName": "[concat(parameters('resourceNamePrefix'), parameters('instances')[copyIndex()].name)]"
              }
            }
          }
    }
}
